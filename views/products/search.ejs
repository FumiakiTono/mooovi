  <body>
    <div class="container">
        <!-- navbar -->
        <%- include("../common/header") %>

        <!-- content -->
        <div class="row row-style">
            <!-- main -->
            <div class="col-xs-9">
              <!-- apply custom style -->
              <div class="page-header" id="page-header-style">
              <h1><small>投稿する作品を検索</small></h1>
              </div>

              <form method="post" action="search">
                <div class="form-group">
                    <input type="text" name="title" id="search" class="form-control search-form">
                    <button type="submit" id="btn"  class="btn btn-primary center-block search-submit">検索する</button>
                </div>
              </form>

              <div class="page-header search-result">
                <h1 id="search-result"><small>検索結果</small></h1>
                <%#- content %>
              </div>
              <div id="movie">
                <% if (collection != "") { %>
                <div class="row">
                  <div class="col-xs-12">
                      <div class="thumbnail" style="text-align:center;padding-top:10px;">
                          <a href="">
                              <img src="150x150.jpg">
                          </a>
                          <div class="caption">
                              <p><b><%- collection.attributes.title %></b></p>
                              <p style="margin-bottom:0px"><a href="" class="btn btn-primary">レビューを投稿する</a></p>
                          </div>
                      </div>
                  </div>
                </div>
                <% } %>
              </div>
            </div>
            <%- include("../common/side") %>
        </div>
    </div>
    <!-- footer -->
    <%- include("../common/footer") %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
